---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ProjectCard from '../../../components/ProjectCard.astro';
import { getCollection } from 'astro:content';
import { useTranslations, stripLangFromSlug } from '../../../i18n/utils';

const lang = 'en';
const t = useTranslations(lang);

const projects = (await getCollection('realisations', ({ data }) => data.lang === lang))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title={`${t('projects.title')} â€” Christophe Craig`} description={t('projects.description')}>
  <h1 class="text-3xl font-bold mb-2 scroll-reveal">{t('projects.title')}</h1>
  <p class="font-sans text-text-light/70 dark:text-text-dark/70 mb-8 scroll-reveal">{t('projects.description')}</p>
  <div class="grid md:grid-cols-2 gap-6">
    {projects.map((project) => (
      <ProjectCard
        title={project.data.title}
        description={project.data.description}
        slug={stripLangFromSlug(project.slug)}
        tags={project.data.tags}
        url={project.data.url}
        repo={project.data.repo}
        image={project.data.image}
      />
    ))}
  </div>
</BaseLayout>
